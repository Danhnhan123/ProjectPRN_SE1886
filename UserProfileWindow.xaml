<Window x:Class="ProjectPRN_SE1886.UserProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectPRN_SE1886"
        mc:Ignorable="d"
        Title="User Profile" Height="400" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="User profile" FontSize="20" FontWeight="Bold"/>
        </StackPanel>
        <Grid Grid.Row="1">
            <Border Background="#F5F6F5" Padding="15" Margin="0,0,10,0">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Fullname" Margin="0,0,0,5"/>
                        <TextBox Grid.Row="1" Grid.Column="0" x:Name="FullnameTextBox" Width="300" Height="30" Margin="0,0,10,10"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="Email" Margin="60,0,0,5"/>
                        <TextBox Grid.Row="1" Grid.Column="1" x:Name="EmailTextBox" Width="300" Height="30" Margin="10,0,0,10"/>
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Password" Margin="0,0,0,5"/>
                        <TextBox Grid.Row="3" Grid.Column="0" x:Name="PasswordTextBox" Width="300" Height="30" Margin="0,0,10,10"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="Address"  Margin="60,0,0,5"/>
                        <TextBox Grid.Row="3" Grid.Column="1" x:Name="txtAddress" Width="300" Height="30" Margin="10,0,0,10"/>
                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Cccd"  Margin="0,0,0,5"/>
                        <TextBox Grid.Row="5" Grid.Column="0" x:Name="txtCccd" Width="300" Height="30" Margin="0,0,10,10"/>

                        <StackPanel Grid.Row="6" Orientation="Horizontal">
                            <Button x:Name="SaveButton" Content="Save" Width="80" Height="25" Margin="0,0,10,0" Click="SaveButton_Click"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

        </Grid>
    </Grid>
</Window>
